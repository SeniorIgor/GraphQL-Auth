{
  "name": "graphql-auth",
  "version": "1.0.0",
  "engines": {
    "node": "14.18.1",
    "npm": "6.14.15"
  },
  "description": "GraphQl authorization",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/SeniorIgor/GraphQL-Auth"
  },
  "scripts": {
    "start": "cross-env NODE_ENV=production node -r dotenv/config index.js",
    "server": "nodemon -r dotenv/config index.js --ignore client",
    "client": "cd client && npm run start",
    "client:build": "cd client && npm run build",
    "app:start": "npm run client:build && npm run start",
    "heroku-postbuild": "cd client && npm install && npm run build",
    "dev": "cross-env NODE_ENV=development concurrently \"npm run server\" \"npm run client\""
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "axios": "^0.24.0",
    "bcrypt": "^5.0.1",
    "connect-mongo": "^4.6.0",
    "cross-env": "^7.0.3",
    "express": "^4.17.1",
    "express-graphql": "^0.12.0",
    "express-session": "^1.17.2",
    "graphql": "^16.0.1",
    "mongoose": "^6.0.12",
    "passport": "^0.5.0",
    "passport-local": "^1.0.0"
  },
  "devDependencies": {
    "concurrently": "^6.4.0",
    "dotenv": "^10.0.0",
    "nodemon": "^2.0.14"
  }
}
